{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "src/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    
    { "src": "/admin", "dest": "/src/admin/admin.html" },
    { "src": "/driver", "dest": "/src/driver/dashboard.html" },
    { "src": "/order", "dest": "/src/order/order-v2.html" },
    { "src": "/rewards", "dest": "/src/rewards/teacher-portal.html" },
    { "src": "/rewards/certificate", "dest": "/src/rewards/certificate.html" },
    { "src": "/load-balance", "dest": "/src/rewards/load-balance.html" },
    { "src": "/creators", "dest": "/src/creators/creators.html" },
    { "src": "/creators/review", "dest": "/src/creators/review.html" },
    { "src": "/sanvalentin", "dest": "/src/public/sanvalentin.html" },
    
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}